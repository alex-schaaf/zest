{
  "name": "zest",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/api",
    "apps/web2",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "format:check": "prettier --check \"./apps/**/*.{ts,tsx,md}\"",
    "format:write": "prettier --write \"./apps/**/*.{ts,tsx,md}\"",
    "plop": "plop",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,scss,md}": "prettier --write"
  },
  "devDependencies": {
    "dotenv-cli": "^7.4.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "plop": "^4.0.1",
    "prettier": "^3.2.5"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
